<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="520" prefWidth="420" spacing="10" style="-fx-padding:18;" stylesheets="@css/addBook.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.first_draft.AddBookController">

    <Label style="-fx-font-size:18; -fx-font-weight:bold;" text="Add New Book" />

    <TextField fx:id="titleField" promptText="Title" />
    <TextField fx:id="authorField" promptText="Author" />
    <TextArea fx:id="descField" prefRowCount="3" promptText="Description" wrapText="true" />

    <HBox alignment="CENTER_LEFT" spacing="8">
        <TextField fx:id="genreField" promptText="Genre" HBox.hgrow="ALWAYS" />
        <Button fx:id="uploadButton" text="Upload Cover" />
    </HBox>

    <ImageView fx:id="previewImage" fitHeight="160" fitWidth="120" preserveRatio="true" style="-fx-border-color: #ddd; -fx-border-width: 1; -fx-padding:6;" />

    <HBox alignment="CENTER" spacing="10">
        <TextField fx:id="buyField" promptText="Buy Price" />
        <TextField fx:id="rentField" promptText="Rent Price" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="cancelButton" text="Cancel" />
        <Button fx:id="saveButton" style="-fx-background-color:#4CAF50; -fx-text-fill:white;" text="Save" />
    </HBox>

    <Label fx:id="messageLabel" textFill="red" />

</VBox>
