<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800" stylesheets="@css/login.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.first_draft.controller.LoginController">

    <children>
        <VBox alignment="CENTER" spacing="20"
              AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0">

            <!-- LOGIN HEADER -->
            <Label text="Login"
                   style="-fx-font-size: 28px; -fx-font-weight: bold;"
                   textFill="#eae6e6" />

            <!-- USERNAME -->
            <TextField fx:id="usernameField"
                       maxWidth="300"
                       promptText="Username" />

            <!-- PASSWORD FIELD WITH EYE ICON -->
            <StackPane maxWidth="300">
                <!-- Hidden password (default visible) -->
                <PasswordField fx:id="passwordField"
                               promptText="Password"
                               prefWidth="300"/>

                <!-- Visible password (initially hidden) -->
                <TextField fx:id="passwordVisibleField"
                           promptText="Password"
                           prefWidth="300"
                           visible="false"
                           managed="false"/>

                <!-- Eye toggle button -->
                <Button fx:id="togglePasswordBtn"
                        text="ðŸ‘"
                        style="-fx-background-color: transparent; -fx-font-size: 16px; -fx-text-fill: white;"
                        StackPane.alignment="CENTER_RIGHT"
                        translateX="-10" />
            </StackPane>

            <!-- LOGIN BUTTON -->
            <Button maxWidth="300"
                    onAction="#handleLogin"
                    text="Login" />

            <!-- REGISTER LINK -->
            <Hyperlink onAction="#handleRegisterRedirect"
                       text="Create Account" />

            <!-- MESSAGE LABEL -->
            <Label fx:id="messageLabel"
                   textFill="red" />
        </VBox>
    </children>
</AnchorPane>