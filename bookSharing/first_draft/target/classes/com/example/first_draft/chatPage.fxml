<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.first_draft.ChatPageController">

    <!-- Top: Title -->
    <top>
        <HBox>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label fx:id="usernameLabel" text="Chat" />
        </HBox>
    </top>

    <!-- Center: Chat messages -->
    <center>
        <ScrollPane fx:id="chatScrollPane" fitToWidth="true">
            <content>
                <VBox fx:id="chatBox" spacing="5">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Bottom: Message input -->
    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <TextField fx:id="messageField" promptText="Type a message..." HBox.hgrow="ALWAYS" />
            <TextField fx:id="recipientField" promptText="Recipient" />
            <Button fx:id="sendButton" onAction="#sendMessage" text="Send" />
        </HBox>
    </bottom>

</BorderPane>
