<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@css/cart.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.first_draft.CartController">
    <children>
        <!-- Title -->
        <Label layoutX="20.0" layoutY="15.0" text="Shopping Cart" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- Scrollable Items Container -->
        <ScrollPane fitToWidth="true" layoutX="0.0" layoutY="55.0" prefHeight="480.0" prefWidth="800.0" AnchorPane.bottomAnchor="65.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="55.0">
            <content>
                <VBox fx:id="itemsContainer" spacing="12.0">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Bottom Button Bar -->
        <HBox layoutX="20.0" layoutY="545.0" spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <Button fx:id="purchaseAllButton" prefWidth="150.0" text="Purchase All" style="-fx-padding: 10 30 10 30; -fx-font-size: 14px;" />
        </HBox>
    </children>
</AnchorPane>
