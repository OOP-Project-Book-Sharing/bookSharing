<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.first_draft.LoginController"
            stylesheets="@css/login.css"
            prefWidth="1200.0" prefHeight="800.0">

    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <Label text="Login" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
            <TextField fx:id="usernameField" promptText="Username" maxWidth="300"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"/>
            <Button text="Login" onAction="#handleLogin" maxWidth="300"/>
            <Hyperlink text="Create Account" onAction="#handleRegisterRedirect"/>
            <Label fx:id="messageLabel" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
