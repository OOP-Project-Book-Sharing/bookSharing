<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@css/myBooks.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.first_draft.MyBooksController">

    <!-- Top VBox with filter buttons -->
    <VBox fx:id="topVBox" alignment="CENTER" spacing="10" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0">
        <children>
            <HBox alignment="CENTER" spacing="20">
                <children>
                    <Button fx:id="btnForSaleRent" prefWidth="140" text="For Sale/Rent" />
                    <Button fx:id="btnRented" prefWidth="140" text="Rented Out" />
                    <Button fx:id="btnBorrowed" prefWidth="140" text="Borrowed " />
                    <Button fx:id="btnAddBook" prefWidth="150" text="Add New Book+" />
                </children>
            </HBox>
        </children>
    </VBox>

    <!-- Center ScrollPane for books -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" layoutY="54.0" prefHeight="546.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="54.0">
        <content>
            <VBox fx:id="bookListVBox" spacing="12">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
            </VBox>
        </content>
    </ScrollPane>

</AnchorPane>
