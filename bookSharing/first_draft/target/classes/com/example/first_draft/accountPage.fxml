<BorderPane prefHeight="600" prefWidth="800" stylesheets="@css/accountPage.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.first_draft.AccountPageController">

    <center>
        <HBox alignment="TOP_LEFT" spacing="50" styleClass="account-content">

            <!-- Account Info Block -->
            <VBox prefHeight="539.0" prefWidth="809.0" spacing="20" styleClass="info-block">

                <Label alignment="CENTER" prefHeight="38.0" prefWidth="759.0" styleClass="title-label" text="ðŸ‘¤ My Account" textAlignment="CENTER" />

                <GridPane hgap="15" vgap="12">

                    <Label styleClass="info-label" text="Username:" GridPane.rowIndex="0" />
                    <Label fx:id="usernameLabel" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label styleClass="info-label" text="Email:" GridPane.rowIndex="1" />
                    <Label fx:id="emailLabel" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label styleClass="info-label" text="Phone:" GridPane.rowIndex="2" />
                    <Label fx:id="phoneLabel" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label styleClass="info-label" text="Location:" GridPane.rowIndex="3" />
                    <Label fx:id="locationLabel" styleClass="info-value" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    <Label styleClass="info-label" text="Password:" GridPane.rowIndex="4" />
                    <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="4">
                        <Label fx:id="passwordLabel" styleClass="info-value" />
                        <Button fx:id="togglePasswordButton" onAction="#handleTogglePassword" styleClass="toggle-password-button" text="ðŸ‘" />
                    </HBox>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>

                </GridPane>

                <Button alignment="CENTER" contentDisplay="TOP" onAction="#handleUpdate" prefHeight="42.0" prefWidth="161.0" styleClass="update-button" text="Update" textAlignment="CENTER" />
            </VBox>
        </HBox>
    </center>

</BorderPane>
