<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="scrollPane" fitToWidth="true" stylesheets="@../css/searchPage.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.first_draft.controller.SearchPageController">
    <content>
        <AnchorPane fx:id="rootPane" prefWidth="585.0">
            <children>
                <HBox layoutX="14.0" layoutY="14.0" spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="searchTextField" prefHeight="27.0" prefWidth="402.0" promptText="Search books">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </TextField>

                    <Button mnemonicParsing="false" onAction="#search" text="Search" />

                    <Button fx:id="viewCartButton" mnemonicParsing="false" onAction="#openCart" text="View Cart" />
                </HBox>

                <GridPane fx:id="gridPane" hgap="20.0" layoutX="6.0" layoutY="80.0" vgap="20.0">
                </GridPane>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>